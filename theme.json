{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#A70336",
          "name": "Rojo Carmesí"
        },
        {
          "slug": "primary-dark",
          "color": "#8a022c",
          "name": "Rojo Oscuro"
        },
        {
          "slug": "secondary",
          "color": "#273376",
          "name": "Azul Marino"
        },
        {
          "slug": "accent",
          "color": "#FFC907",
          "name": "Amarillo Oro"
        },
        {
          "slug": "text-dark",
          "color": "#1a1a1a",
          "name": "Texto Oscuro"
        },
        {
          "slug": "text-light",
          "color": "#666666",
          "name": "Texto Claro"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "Blanco"
        },
        {
          "slug": "bg-light",
          "color": "#f8f9fa",
          "name": "Fondo Claro"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Georama', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
          "slug": "georama",
          "name": "Georama"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Pequeño"
        },
        {
          "slug": "normal",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Mediano"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Grande"
        },
        {
          "slug": "x-large",
          "size": "2rem",
          "name": "Extra Grande"
        },
        {
          "slug": "xx-large",
          "size": "2.5rem",
          "name": "Muy Grande"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--text-dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--georama)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-dark)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--primary-dark)"
          }
        }
      }
    }
  }
}
